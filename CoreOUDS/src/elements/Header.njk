{% macro header(service) %}

<header class="govuk-header" data-module="govuk-header">
  <div class="govuk-header__container govuk-width-container">
    <div class="govuk-header__logo">
      <a href="{{ service.homePageUrl | trans() if service.homePageUrl and service.homePageUrl != '' else '#' }}" class="govuk-header__link govuk-header__link--homepage">
        <img src="/assets/ou/OU_Logo.svg" title="The Open University" />
      </a>
    </div>
    <div class="govuk-header__content">
      <a href="{{ service.firstPage }}" class="govuk-header__link govuk-header__service-name">
        {{ service.name | trans() }}
      </a>
    </div>
  </div>
</header>
  
{% endmacro %}