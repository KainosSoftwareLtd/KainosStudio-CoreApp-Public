  "files": [
    "/lib",
    "host.json"
  ],
  "directories": {
    "lib": "lib"
  },
  "scripts": {
    "build": "tsc && node ../utils/recursiveCopy.js --originFolderPath ./src/function.json --targetFolderPath ./lib/function.json",
