  "scripts": {
    "test": "",
    "build": "npm run add-runtime && npm i && tsc && npm run build-sass && node ../utils/recursiveCopy.js --originFolderPath src/. --targetFolderPath lib/ && npm run build-copyjs && npm run build-copy-assets",
    "add-runtime": "node ../utils/fileCopy.js --originFilePath ../CoreRuntime/core-runtime-1.0.0.tgz --targetFilePath ./core-runtime-1.0.0.tgz && npm install core-runtime-1.0.0.tgz",
    "build-sass": "sass src/css/govuk-wds.scss lib/public/wds/govuk-wds.css",
    "build-copyjs": "node ../utils/createFolder.js --dirPath lib/public/wds && node ../utils/fileCopy.js --originFilePath node_modules/govuk-frontend/dist/govuk/govuk-frontend.min.js --targetFilePath lib/public/wds/all.js",
    "build-copy-assets": "node ../utils/createFolder.js --dirPath lib/assets && node ../utils/fileCopy.js --originFilePath node_modules/govuk-frontend/dist/govuk/assets/ --targetFilePath lib/assets/",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json"
  },
