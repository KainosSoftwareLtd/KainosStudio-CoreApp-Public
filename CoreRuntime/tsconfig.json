{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "declaration": true,
    "outDir": "./lib",
    "strict": true,
    "sourceMap": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true
  },
  "typeRoots": ["node_modules/@types"],
  "include": ["src", "**/*.ts"],
  "exclude": ["node_modules", "lib"]
}